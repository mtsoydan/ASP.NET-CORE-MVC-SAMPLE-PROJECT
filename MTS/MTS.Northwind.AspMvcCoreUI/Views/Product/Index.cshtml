@model MTS.Northwind.AspMvcCoreUI.Models.ProductListViewModel
@{
    Layout = "~/Views/_Layout.cshtml";
}

<!DOCTYPE html>


<body>
    <table class="table table-responsive">
        <tr>
            <td>ProductID </td>
            <td>ProductName</td> 
            <td>UnitsInStock</td>
        </tr>
        @foreach (var product in Model.Products)
        {
        <tr>
            <td>@product.ProductID </td>
            <td>@product.ProductName</td>
            <td>@product.UnitsInStock</td>
            <td><a class="btn btn-xs btn-success" asp-controller="Cart" asp-action="AddToCart" asp-route-ProductID="@product.ProductID">Add To Cart</a></td>
        </tr>
        }
    </table>
</body>
<product-list-pager page-count="@Model.pageCount" page-currentCategory="@Model.currenCategory" page-currentPage="@Model.currentPage" page-size="Model.PageSize" ></product-list-pager>
